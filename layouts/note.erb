<% render '/2021q3.*' do %>
  <h1 class="mb-4"><%= @item[:title] %></h1>

  <div class="meta mb-5">
    <div>Last edited <%= fmt_date(@item[:updated_at]) %></div>

    <% if @item[:is_linked_from]&.any? %>
      <div class="">Backlinks: <%= @item[:is_linked_from].map { |id| @items[id] }.sort_by { |i| i[:title] }.map { |note| link_to(note[:title], note) }.join(', ') %>
      </div>
    <% end %>
  </div>

  <%= yield %>
<% end %>
